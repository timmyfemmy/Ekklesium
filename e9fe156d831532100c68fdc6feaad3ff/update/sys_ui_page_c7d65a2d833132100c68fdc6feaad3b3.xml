        <name>Process_Refund_Dialog</name>
        <processing_script><![CDATA[(function processRefund() {
    var sysId = request.getParameter('sysparm_sys_id') || '';
    var refundAmount = request.getParameter('sysparm_refund_amount') || 0;

    if (sysId && refundAmount) {
        var donation = new GlideRecord('x_1644142_ekkles_0_donation');
        if (donation.get(sysId)) {
            donation.setValue('refund_amount', refundAmount);
            donation.setValue('refund_status', 'partial_refund');
            donation.update();
        }

        // Close the dialog and reload the parent form
        //var urlOnStack = donation.getTableName() + '.do?sys_id=' + sysId + '&sysparm_stack=no';
        var urlOnStack = donation.getLink(false);
        gs.info('Redirecting to: ' + urlOnStack);
        response.sendRedirect(urlOnStack);
    
    }

    gs.addInfoMessage('Refund amount updated successfully');
})();
]]></processing_script>
