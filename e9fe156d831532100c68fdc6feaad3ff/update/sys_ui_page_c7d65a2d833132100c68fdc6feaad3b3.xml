        <client_script><![CDATA[function validateRefund() {
    var refundAmount = parseFloat(document.getElementsByName('sysparm_refund_amount')[0].value);
    
    if (!refundAmount || refundAmount <= 0) {
        alert('Please enter a valid refund amount greater than 0');
        return false;
    }
    return true;
}]]></client_script>
