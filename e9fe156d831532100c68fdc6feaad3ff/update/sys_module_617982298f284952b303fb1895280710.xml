        <content><![CDATA[/**
 * Business Rule: Calculate Net Amount
 * Table: x_1644142_ekkles_0_donation
 * When: before
 * Action: insert, update
 * 
 * Calculates net_amount = amount - refund_amount
 */

(function executeRule(current, previous) {
    
    var originalAmount = parseFloat(current.amount) || 0;
    var refundAmount = parseFloat(current.refund_amount) || 0;
    
    current.net_amount = originalAmount - refundAmount;
    
})(current, previous);]]></content>
